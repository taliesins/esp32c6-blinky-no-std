{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "scripts/build.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build & Flash with CLI",
      "type": "shell",
      "command": "scripts/flash-cli.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Build & Flash with Web",
      "type": "shell",
      "command": "scripts/flash-web.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Console",
      "type": "shell",
      "command": "scripts/console.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "buildMode",
      "description": "Select the build mode:",
      "options": [
        "release",
        "debug"
      ],
      "default": "release"
    }
  ]
}